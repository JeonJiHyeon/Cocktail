<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recipe.RecipeFragment">

    <ImageButton
        android:id="@+id/All_recipe"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/all"
        android:text="ALL" />

    <TextView
        android:id="@+id/info_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="BASE"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageButton
                android:id="@+id/Gin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/gin"

                android:text="진" />

            <ImageButton
                android:id="@+id/Vodka"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/vodka"
                android:text="보드카" />

            <ImageButton
                android:id="@+id/Rum"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/rum"
                android:text="럼" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageButton
                android:id="@+id/Tequila"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/tequila"
                android:text="테킬라" />

            <ImageButton
                android:id="@+id/Whiskey"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/whiskey"
                android:text="위스키" />

            <ImageButton
                android:id="@+id/Brandy"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/brandy"
                android:text="브랜디" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageButton
                android:id="@+id/Liqueur"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/liqueur"
                android:text="리큐어" />

            <ImageButton
                android:id="@+id/Wine"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/wine"
                android:text="와인" />

            <ImageButton
                android:id="@+id/Beer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/beer"
                android:text="맥주" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageButton
                android:id="@+id/Soju"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/soju"
                android:text="소주" />

            <ImageButton
                android:id="@+id/Non"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/non"
                android:text="논알콜" />
        </TableRow>
    </TableLayout>

</LinearLayout>